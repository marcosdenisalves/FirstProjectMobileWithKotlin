<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextStudentGradeOne"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="210dp"
        android:layout_height="64dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Primeira nota"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:text=""
        android:textColorHighlight="@color/purple_200"
        android:textColorLink="@color/purple_200"
        android:textCursorDrawable="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextStudentGradeTwo"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="210dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Segunda nota"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:text=""
        android:textColorHighlight="@color/purple_200"
        android:textColorLink="@color/purple_200"
        android:textCursorDrawable="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextStudentGradeOne"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextAttendStudent"
        android:layout_width="210dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="NÃºmero de faltas"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:text=""
        android:textColorHighlight="@color/purple_200"
        android:textColorLink="@color/purple_200"
        android:textCursorDrawable="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextStudentGradeTwo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="210dp"

        android:layout_height="wrap_content"
        android:text="@string/Calcular"
        android:visibility="visible"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAttendStudent"
        app:layout_constraintVertical_bias="0.205" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculateBtn"
        app:layout_constraintVertical_bias="0.216" />

</androidx.constraintlayout.widget.ConstraintLayout>